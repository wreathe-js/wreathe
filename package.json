{
  "name": "wreathe",
  "private": true,
  "keywords": [
    "multi-root ready"
  ],
  "homepage": "https://wreathe.dev",
  "bugs": {
    "url": "https://github.com/wreathe-js/wreathe/issues",
    "email": "contact@wreathe.dev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wreathe-js/wreathe.git"
  },
  "license": "MIT",
  "scripts": {
    "========= Install": "",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "reinstall": "pnpm run clean:pnpm && pnpm install",
    "========= Clean": "",
    "clean": "pnpm --stream -r clean",
    "clean:docs": "pnpm --filter @wreathe-js/docs clean",
    "clean:core": "pnpm --filter @wreathe-js/core clean",
    "clean:preact": "pnpm --filter @wreathe-js/preact clean",
    "clean:react": "pnpm --filter @wreathe-js/react clean",
    "clean:vue": "pnpm --filter @wreathe-js/vue clean",
    "clean:pnpm": "node ./scripts/cleanModules.mjs",
    "========= Prettier": "",
    "fmt:check": "prettier --check \"**/*.{ts,tsx,vue,json,md}\"",
    "fmt": "prettier --write \"**/*.{ts,tsx,vue,json,md}\"",
    "========= Development": "",
    "dev:docs": "pnpm --filter @wreathe-js/docs dev",
    "========= Build": "",
    "build": "pnpm --filter \"./packages\" -r build",
    "build:docs": "pnpm --filter @wreathe-js/docs build",
    "build:core": "pnpm --filter @wreathe-js/core build",
    "build:preact": "pnpm --filter @wreathe-js/preact build",
    "build:react": "pnpm --filter @wreathe-js/react build",
    "build:vue": "pnpm --filter @wreathe-js/vue build",
    "========= Workspace": "",
    "cz": "czg",
    "list": "pnpm recursive list",
    "list:workspaces": "pnpm m ls --depth -1 --porcelain"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "czg": "^1.4.1",
    "husky": "^8.0.0",
    "prettier": "^2.8.1",
    "pretty-quick": "^3.1.3",
    "typescript": "^4.9.4",
    "unbuild": "^1.0.2"
  },
  "engines": {
    "node": ">=16.14.0",
    "npm": "use `pnpm` instead",
    "pnpm": ">=7.23.0",
    "yarn": "use `pnpm` instead"
  },
  "packageManager": "pnpm@7.24.3",
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@algolia/client-search",
        "react",
        "react-dom",
        "@types/react"
      ]
    }
  },
  "preset": "./packages/presets/preset.ts"
}
