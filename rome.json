{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentSize": 2,
    "indentStyle": "space",
    "lineWidth": 80,
    "ignore": [
      "**/cache/**", "**/dist/**", "./packages/laravel/**/*",
      "./packages/presets/templates/**/*", "./sandboxes/**/*"
    ]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "quoteProperties": "asNeeded",
      "semicolons": "asNeeded",
      "trailingComma": "es5"
    }
  },
  "linter": {
    "enabled": true,
    "ignore": [
      "**/cache/**", "**/dist/**", "./packages/laravel/**/*",
      "./packages/presets/templates/**/*", "./sandboxes/**/*"
    ],
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off"
      }
    }
  }
}
